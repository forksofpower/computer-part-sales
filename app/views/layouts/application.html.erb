<!DOCTYPE html>
<html>
  <head>
    <title>ComputerPartSales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">computer-part-sales</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Listings', listings_path, class: "nav-link" %>
          </li>
        </ul>

        <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item">
            <%= button_to 'Sign Out', signout_path, class: "btn btn-outline-danger" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', login_path, class: "navbar-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_path, class: "navbar-link" %>
          </li>
        <% end %>
        </ul>
    </nav>
    <br>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>